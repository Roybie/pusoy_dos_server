cl-red = #d75c37
cl-gray = #67727a
cl-blue = #6991ac
cl-light = #c3d7df
cl-white = #f5f5f5
cl-green = #89bd75
cl-darkgreen = #2a8600

cl-card-fore = #fff

cl-facebook = #3b5998

decorative-border-width = 8px

body
    background-color cl-white
    color cl-gray

a, a:visited
    text-decoration none
    color inherit

.container
    max-width 850px
    margin 0 auto

.app-header
    background-color cl-blue
    color cl-light
    border-bottom decorative-border-width solid cl-red
    .title
        text-align center
    .header-icon
        padding 20px 0
        text-align center
    

.app-content

    a:hover
        text-decoration underline


.app-footer 
    margin-top 20px
    padding 15px
    text-align center
    border-top decorative-border-width solid cl-blue
    background-color cl-light
    color cl-blue

    a:hover
        text-decoration underline
    
    .feedback
        margin-bottom 15px
        .btn, .btn:hover, .btn:visited
            text-decoration none
            color cl-blue
            background-color cl-white
            width:124px

.index
    padding 5px
    .login
        text-align center 


.hearts, .diamonds
    color cl-red

.clubs, .spades
    color cl-gray


.game-panel
    .game-menu
        margin 30px 0
        text-align center

    .game-list
        h3
            margin-left 15px
        margin 30px 0
    .my-game
        margin-bottom 8px
        .cta
            margin-top 12px
        .id
            background-color cl-blue
            color white
            width 20px
            height 20px
            border-radius 10px
            text-align center
            small
                padding-top 3px
                display block
    .game-container
        padding 8px 12px
        background-color cl-light
        border-bottom 6px solid cl-blue
        &.my-go
            background-color cl-green
            color cl-white
            border-bottom 6px solid cl-darkgreen
            .id
                background-color cl-darkgreen
            .action-button
                background-color cl-darkgreen
        @media (min-width: 48em)
            margin 4px
            height 82%

    .summary
        padding 12px
        text-align center

 
a.button-primary, .button-primary
    background-color cl-light
    color cl-blue

.action-button
    background-color cl-blue
    color cl-white

.facebook-color
    color cl-facebook

.player-list
    .logged-in-player
        font-weight bold

.inplay
    padding 0 10px
    overflow-x hidden
    .my-cards-container
        overflow-x auto
        height 65px
    .card-set
        display flex
        width 500px
        height 52px
        padding-top 5px 
        margin 0 auto
        .card-container
            overflow hidden
            cursor pointer
        .card-container:last-child
            overflow visible
        .card
            padding 2px
            border 1px solid cl-gray
            border-radius 3px
            background-color cl-card-fore
            display inline-block
            width 30px
            height 35px
            box-sizing content-box
            text-align left
            font-size 0.7em
            p
                margin 0
        .card-container.picked
            overflow visible
            transform scale(1.2)
            z-index 1
            .card
                text-align center
                p
                    display inline-block
                    padding 7px 1px 1px 0
    .move-placeholder
        padding 9px 0 10px 0
    .action
        text-align center
        .action-btn
            margin 0 auto
        .action-btn.show
            display block
    .win-trophy
        margin-left 5px
        color gold


.text-center
    text-align center

.joker-modal
    text-align center
    position fixed
    top 0
    width 100%
    height 100%
    padding 10px
    background-color cl-white

.not-loaded .hide-on-load
        display none 

.index
    .blurb
        margin-top 50px
