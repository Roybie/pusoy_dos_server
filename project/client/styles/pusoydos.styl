cl-red = #d75c37
cl-gray = #67727a
cl-blue = #6991ac
cl-light = #c3d7df
cl-white = #f5f5f5

cl-card-fore = #fff

cl-facebook = #3b5998

decorative-border-width = 8px

body
    background-color cl-white
    color cl-gray

a, a:visited
    text-decoration none
    color inherit

.container
    max-width 850px
    margin 0 auto

.app-header
    background-color cl-blue
    color cl-light
    border-bottom decorative-border-width solid cl-red
    .title
        text-align center
    .header-icon
        padding 20px 0
        text-align center
    

.app-content

    a:hover
        text-decoration underline


.app-footer 
    margin-top 20px
    padding 15px
    text-align center
    border-top decorative-border-width solid cl-blue
    background-color cl-light
    color cl-blue

    a:hover
        text-decoration underline
    
    .feedback
        margin-bottom 15px
        .btn, .btn:hover, .btn:visited
            text-decoration none
            color cl-blue
            background-color cl-white
            width:124px

.index
    padding 5px
    .login
        text-align center 


.hearts, .diamonds
    color cl-red

.clubs, .spades
    color cl-gray


.game-panel
    .game-menu
        margin 30px 0
        text-align center

    .game-list
        margin 30px 10px

 
a.button-primary, .button-primary
    background-color cl-light
    color cl-blue

.facebook-color
    color cl-facebook

.player-list
    .logged-in-player
        font-weight bold

.inplay
    overflow-x hidden
    .my-cards-container
        overflow-x auto
        height 65px
    .card-set
        display flex
        width 500px
        height 52px
        padding-top 5px 
        margin 0 auto
        .card-container
            overflow hidden
            cursor pointer
        .card-container:last-child
            overflow visible
        .card
            padding 2px
            border 1px solid cl-gray
            border-radius 3px
            background-color cl-card-fore
            display inline-block
            width 30px
            height 35px
            box-sizing content-box
            text-align left
            font-size 0.7em
            p
                margin 0
        .card-container.picked
            overflow visible
            transform scale(1.2)
            z-index 1
            .card
                text-align center
                p
                    display inline-block
                    padding 7px 1px 1px 0
    .action
        text-align center
        .action-btn
            margin 0 auto
        .action-btn.show
            display block


.text-center
    text-align center

.joker-modal
    text-align center
    position fixed
    top 0
    width 100%
    height 100%
    padding 10px
    background-color cl-white

.not-loaded .hide-on-load
        display none 
